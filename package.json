{
  "name": "todo-apps",
  "description": "A professional Todo application built with React, Vite, and Tailwind CSS, utilizing Bun.js for runtime.",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bunx --bun vite",
    "build": "bunx --bun vite build",
    "lint": "bunx --bun eslint .",
    "preview": "bunx --bun vite preview",
    "predeploy": "bunx --bun vite build",
    "deploy": "bunx --bun gh-pages -d dist"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@tailwindcss/vite": "^4.1.5",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@vitejs/plugin-react": "^4.4.1",
    "eslint": "^9.26.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "gh-pages": "^6.3.0",
    "globals": "^16.0.0",
    "tailwindcss": "^4.1.5",
    "vite": "^6.3.4"
  }
}
